@model FriendsIndexViewModel
@{
    ViewBag.Title = "Amigos";
    Layout = "_Layout";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container-fluid gedf-wrapper">
    <div class="row">

        <!-- Panel lateral izquierdo -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <nav class="list-group list-group-flush">
                    <a asp-controller="" asp-action=""
                       class="list-group-item list-group-item-action text-dark fw-semibold no-link-style">
                        LinkUp (Home)
                    </a>
                    <a asp-controller="Friends" asp-action="Index"
                       class="list-group-item list-group-item-action text-dark fw-semibold no-link-style">
                        Amigos
                    </a>
                    <a asp-controller="FriendShipRequest" asp-action="Index"
                       class="list-group-item list-group-item-action text-dark fw-semibold no-link-style">
                        Solicitudes de amistad
                    </a>
                    <a asp-controller="Battleship" asp-action="Index"
                       class="list-group-item list-group-item-action text-dark fw-semibold no-link-style">
                        Battleship
                    </a>
                </nav>
            </div>
            <div class="card mt-4">
                <div class="card-header fw-bold">
                    Amigos
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-2">
                        @foreach (var item in Model.Friends)
                        {
                            <div class="d-flex justify-content-between align-items-center p-2 border-bottom">
                    
                                <div class="d-flex align-items-center gap-2">
                                    <img class="rounded-circle" width="35" height="35" src="@(item.PhotoPath!)" alt="Foto de perfil">
                                    <div class="d-flex flex-column">
                                        <div class="fw-bold">@($"{item.FirstName} {item.LastName}")</div>
                                        <div class="text-muted small">
                                            <a class="no-link-style" asp-controller="Friends" asp-action="Details" asp-route-userId="@item.Id">
                                                @item.UserName
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <button class="btn btn-link text-danger p-0 ms-2" data-bs-toggle="modal"
                                        data-bs-target="#deleteFriendModal" data-userid="@item.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            
        </div>


        <!-- Main content -->
        <div class="col-md-6 gedf-main">
            @* Mensajes de alerta *@
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @if (ViewBag.Message is string)
                    {
                        <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
                    }
                    else
                    {
                        @foreach (var line in ViewBag.Message)
                        {
                            <p class="text-center">@line</p>
                        }
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Posts existentes -->
            @foreach (var post in Model.Posts)
            {
                <div class="card gedf-card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img class="rounded-circle me-2" width="45" height="45" src="@(post.User!.PhotoPath!)"
                                     alt="Imagen de perfil">
                                <div>
                                    <div class="h5 m-0">@post.User.FirstName</div>
                                    <div class="h7 text-muted">
                                        <a class="no-link-style" asp-controller="Friends" asp-action="Details"
                                           asp-route-userId="@post.UserId">
                                            @($"{post.User.FirstName} {post.User.LastName}")
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="text-muted h7 mb-2"><i class="fa fa-clock-o"></i>@post.CreatedAt.ToShortDateString()
                        </div>
                        <p class="card-text">@post.Text</p>

                        @if (!string.IsNullOrEmpty(post.ImagePath))
                        {
                            <img class="card-img-top" src="@(post.ImagePath)" alt="imagen"/>
                        }
                        @if (!string.IsNullOrEmpty(post.VideoUrl))
                        {
                            var embedUrl = post.VideoUrl.Replace("watch?v=", "embed/");
                            <div class="ratio ratio-16x9 mt-2">
                                <iframe src="@embedUrl" title="Video de YouTube" allowfullscreen></iframe>
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        @switch (post.IsLikedByUserInThisSession)
                        {
                            case null:
                                <text>
                                    <form asp-controller="Friends" asp-action="LikePost" method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="postId" value="@post.Id"/>
                                        <input type="hidden" name="like" value="true"/>
                                        <button type="submit" class="card-link btn btn-link p-0">Me gusta</button>
                                    </form>

                                    <form asp-controller="Friends" asp-action="LikePost" method="post"
                                          style="display:inline; margin-left:10px;">
                                        <input type="hidden" name="postId" value="@post.Id"/>
                                        <input type="hidden" name="like" value="false"/>
                                        <button type="submit" class="card-link btn btn-link p-0">No gusta</button>
                                    </form>
                                </text>
                                break;

                            case true:
                                <text>
                                    <span class="card-text btn btn-primary text-light disabled">Me gusta</span>

                                    <form asp-controller="Friends" asp-action="LikePost" method="post"
                                          style="display:inline; margin-left:10px;">
                                        <input type="hidden" name="postId" value="@post.Id"/>
                                        <input type="hidden" name="like" value="false"/>
                                        <button type="submit" class="card-link btn btn-link p-0">No gusta</button>
                                    </form>
                                </text>
                                break;

                            case false:
                                <text>
                                    <form asp-controller="Friends" asp-action="LikePost" method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="postId" value="@post.Id"/>
                                        <input type="hidden" name="like" value="true"/>
                                        <button type="submit" class="card-link btn btn-link p-0">Me gusta</button>
                                    </form>

                                    <span class="card-text text-light btn btn-danger disabled"
                                          style="margin-left:10px;">No gusta</span>
                                </text>
                                break;
                        }
                        <div class="border-top footer text-muted mt-2">
                            <div class="text-muted mt-1 mb-2">Comentarios</div>

                            @* Comentarios *@
                            @foreach (var comment in post.Comments)
                            {
                                <div class="card mb-3">
                                    <div
                                        class="card-header bg-primary-subtle d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <img class="rounded-circle me-2" width="30" height="30"
                                                 src="@(comment.Author!.PhotoPath)" alt="Imagen de perfil">
                                            <div
                                                class="h7">@($"{comment.Author.FirstName} {comment.Author.LastName}")</div>
                                        </div>

                                        @if (comment.AuthorId == currentUserId)
                                        {
                                            <div class="dropdown">
                                                <button class="btn dropdown-toggle" type="button"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-three-dots" style="color: blue;"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item edit-comment-btn" href="#"
                                                           data-bs-toggle="modal"
                                                           data-bs-target="#editCommentModal"
                                                           data-id="@comment.Id"
                                                           data-text="@comment.Text">
                                                            Editar comentario
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item delete-comment-btn" href="#"
                                                           data-bs-toggle="modal"
                                                           data-bs-target="#deleteCommentModal"
                                                           data-id="@comment.Id">
                                                            Eliminar comentario
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">@comment.Text</p>
                                    </div>

                                    @* Replies *@
                                    @foreach (var reply in comment.Replies)
                                    {
                                        <div class="card mb-1 ms-4">
                                            <div
                                                class="card-header bg-secondary-subtle d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <img class="rounded-circle me-2" width="25" height="25"
                                                         src="@(reply.Author!.PhotoPath)" alt="Imagen de perfil">
                                                    <div
                                                        class="h7">@($"{reply.Author.FirstName} {reply.Author.LastName}")</div>
                                                </div>

                                                @if (reply.AuthorId == currentUserId)
                                                {
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle" type="button"
                                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="bi bi-three-dots" style="color: blue;"></i>
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            <li>
                                                                <a class="dropdown-item edit-comment-btn" href="#"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#editCommentModal"
                                                                   data-id="@reply.Id"
                                                                   data-text="@reply.Text">
                                                                    Editar comentario
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item delete-comment-btn" href="#"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#deleteCommentModal"
                                                                   data-id="@reply.Id">
                                                                    Eliminar comentario
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }

                                            </div>

                                            <div class="card-body">@reply.Text</div>
                                        </div>
                                    }

                                    @* Form para responder *@
                                    <div class="card bg-light mt-2">
                                        <div class="container-fluid mt-3">
                                            <form asp-controller="Friends" asp-action="CreateComment" method="post">
                                                <input type="hidden" asp-for="CommentCreateViewModel.AuthorId"
                                                       value="@currentUserId"/>
                                                <input type="hidden" asp-for="CommentCreateViewModel.PostId"
                                                       value="@post.Id"/>
                                                <input type="hidden" asp-for="CommentCreateViewModel.ParentCommentId"
                                                       value="@comment.Id"/>

                                                <div class="d-flex align-items-start mb-2">
                                                    <textarea asp-for="CommentCreateViewModel.Text"
                                                              class="form-control me-2"
                                                              rows="2"
                                                              placeholder="Responde a este mismo comentario"
                                                              style="resize: none; flex: 1;"></textarea>
                                                    <button class="btn btn-primary" type="submit">Responder</button>
                                                </div>
                                                <span class="text-danger"
                                                      asp-validation-for="CommentCreateViewModel.Text"></span>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }

                            @* Form para comentar el post *@
                            <div class="card bg-light mt-2">
                                <div class="container-fluid mt-3">
                                    <form asp-controller="Friends" asp-action="CreateComment" method="post">
                                        <input type="hidden" asp-for="CommentCreateViewModel.AuthorId"
                                               value="@currentUserId"/>
                                        <input type="hidden" asp-for="CommentCreateViewModel.PostId" value="@post.Id"/>

                                        <div class="d-flex align-items-start mb-2">
                                            <textarea asp-for="CommentCreateViewModel.Text"
                                                      class="form-control me-2"
                                                      rows="2"
                                                      placeholder="Comenta este post"
                                                      style="resize: none; flex: 1;"></textarea>
                                            <button class="btn btn-primary" type="submit">Comentar</button>
                                        </div>
                                        <span class="text-danger"
                                              asp-validation-for="CommentCreateViewModel.Text"></span>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Lateral derecho -->
        <div class="col-md-3">
            <div class="card gedf-card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <img class="rounded-circle me-2" width="45" height="45"
                             src="@Model.CurrentUser.PhotoPath" alt="Imagen de perfil">
                        <div>
                            <div class="fw-bold h6 m-0">@($"{Model.CurrentUser.FirstName} {Model.CurrentUser.LastName}")</div>
                            <div class="text-muted small">@Model.CurrentUser.UserName</div>
                        </div>
                    </div>
                </div>
                <div class="bg-light text-center">
                    <nav class="list-group list-group-flush">
                        <a asp-controller="Login" asp-action="EditUser" asp-route-userid="@Model.CurrentUser.Id" 
                           class="list-group-item list-group-item-action fw-semibold no-link-style">
                            Mi perfil
                        </a>
                        <a asp-controller="Login" asp-action="Logout"
                           class="list-group-item list-group-item-action text-danger fw-semibold no-link-style">
                            Cerrar sesión
                        </a>
                    </nav>
                </div>
            </div>
        </div>
        
    </div>
</div>


<!-- Modal de confirmación para eliminar un comentario -->
<div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar este comentario?
            </div>
            <div class="modal-footer">
                <form asp-controller="Friends" asp-action="DeleteComment" method="post">
                    <input type="hidden" id="modalDeleteCommentId" name="commentId"/>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- Modal reutilizable para editar comentario -->
<div class="modal fade" id="editCommentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Friends" asp-action="EditComment" method="post">
                <input type="hidden" id="modalCommentId" asp-for="CommentEditViewModel.Id"/>
                <div class="modal-header">
                    <h5 class="modal-title">Editar Comentario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <textarea class="form-control" id="modalCommentText" asp-for="CommentEditViewModel.Text"></textarea>
                    <span asp-validation-for="CommentEditViewModel.Text" class="text-danger"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar amigo -->
<div class="modal fade" id="deleteFriendModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar esta amistad?
            </div>
            <div class="modal-footer">
                <form asp-controller="Friends" asp-action="DeleteFriend" method="post">
                    <input type="hidden" id="modalDeleteFriendId" name="friendUserId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Script para pasar el userId al modal -->
<script>
    document.querySelectorAll('[data-bs-target="#deleteFriendModal"]').forEach(btn => {
        btn.addEventListener('click', function () {
            const userId = this.dataset.userid;
            document.getElementById('modalDeleteFriendId').value = userId;
        });
    });
</script>


<!-- Para obtener el ID y texto que necesita el fomulario del modal de editar comentarios -->
<script>
    document.querySelectorAll(".edit-comment-btn").forEach(btn => {

        btn.addEventListener("click", function (e) {
            e.preventDefault();
            const id = this.dataset.id;
            const text = this.dataset.text;

            document.getElementById("modalCommentId").value = id;
            document.getElementById("modalCommentText").value = text;
        });

    });
</script>

<!-- Para obtener el ID que necesita el fomulario del modal de eliminar comentarios -->
<script>
    document.querySelectorAll(".delete-comment-btn").forEach(btn => {

        btn.addEventListener("click", function (e) {
            e.preventDefault();

            // Colocamos el ID en un campo oculto dentro del modal
            document.getElementById("modalDeleteCommentId").value = this.dataset.id;
        });

    });
</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Mostrar modal de edición de post si hay errores
            var showPostModal = '@(ViewBag.ShowPostModal ?? false)'.toLowerCase() === 'true';
            if (showPostModal) {
                $('#editPostModal').modal('show');
            }

            // Mostrar modal de edición de comentario si hay errores
            var showCommentModal = '@(ViewBag.ShowCommentModal ?? false)'.toLowerCase() === 'true';
            if (showCommentModal) {
                $('#editCommentModal').modal('show');
            }
        });
    </script>
}
